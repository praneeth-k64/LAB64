{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lab64.ai/schemas/portfolio-data.json",
  "title": "LAB64 Portfolio Data Schema",
  "description": "JSON Schema for validating LAB64 portfolio companies data",
  "type": "object",
  "required": ["version", "lastUpdated", "companies"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the data schema"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last data update"
    },
    "companies": {
      "type": "array",
      "description": "Array of portfolio companies",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/PortfolioCompany"
      }
    }
  },
  "definitions": {
    "PortfolioCompany": {
      "type": "object",
      "required": [
        "id",
        "name",
        "tagline",
        "description",
        "focusArea",
        "websiteUrl",
        "logoUrl",
        "backgroundImage",
        "comingSoon",
        "displayOrder"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "minLength": 3,
          "maxLength": 50,
          "description": "Unique identifier in lowercase-kebab-case format"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 50,
          "description": "Company name displayed on card"
        },
        "tagline": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Short tagline (1-2 sentences)"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Brief description of company focus"
        },
        "focusArea": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Focus area or industry category"
        },
        "websiteUrl": {
          "oneOf": [
            {
              "type": "string",
              "format": "uri",
              "pattern": "^https://",
              "description": "HTTPS URL to company website"
            },
            {
              "type": "null",
              "description": "Null if website not yet available"
            }
          ]
        },
        "logoUrl": {
          "type": "string",
          "pattern": "^/companies/[a-z0-9-]+\\.(svg|png)$",
          "description": "Path to company logo (SVG or PNG)"
        },
        "backgroundImage": {
          "type": "string",
          "pattern": "^/companies/[a-z0-9-]+\\.(avif|webp|jpg|png)$",
          "description": "Path to card background image (AVIF, WebP, JPG, or PNG)"
        },
        "comingSoon": {
          "type": "boolean",
          "description": "Whether website is coming soon (true) or active (false)"
        },
        "displayOrder": {
          "type": "integer",
          "minimum": 1,
          "description": "Display order on landing page (lower numbers first)"
        },
        "brandColor": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Optional hex color for brand accent (e.g., #667eea)"
        }
      },
      "additionalProperties": false
    }
  }
}
